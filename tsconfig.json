{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "removeComments": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "lib": ["es2020"],
    "moduleResolution": "node",
    "target": "es2018",
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "esModuleInterop": true
  }
}
